{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

	<h2>Connexion</h2>

	{% if error %}
		<div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
	{% endif %}
	
	<form action="{{ path('connexion') }}" method="post" class="center-block">
		<div class="form-group">
			<input type="text" class="form-control" required name="_username" value="{{ last_username }}" placeholder="Email">
		</div>

		<div class="form-group">
			<input type="password" class="form-control" required name="_password" placeholder="Mot de passe">
		</div>

		<div class="form-group">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
			<button class="btn btn-success" type="submit">Se connecter</button>
		</div>
	</form>

{% endblock %}
