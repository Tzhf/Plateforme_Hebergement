{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

	<h1 class="mb-2">Connexion</h1>

	{% if error %}
		<div class="text-danger">Identifiants incorrects</div>
	{% endif %}
	<form action="{{ path('connexion') }}" method="post" class="mx-auto w-50" novalidate="novalidate">
		<div class="form-group">
			<input type="text" class="form-control text-center" required name="_username" value="{{ last_username }}" placeholder="Email">
		</div>
		<div class="form-group">
			<input type="password" class="form-control" required name="_password" placeholder="Mot de passe">
		</div>
		<div class="form-group">
			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
			<button class="btn btn-success" type="submit">Se connecter</button>
		</div>
	</form>

{% endblock %}
