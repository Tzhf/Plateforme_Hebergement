{% extends 'base.html.twig' %}
{% block page_title %}Inscription{% endblock %}

{% block body %}
	<div class="container">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
			<div class="card mx-auto mt-5">
				<div class="card-header">
					<h3 class="m-0 text-center text-primary">Inscription</h3>
				</div>
				<div class="row">
					<div class="col-6">
						<div class="card-body">
							{{ form_row(form.username, {'label': 'Nom de gestionnaire :', 'attr': {'placeholder': 'Nom de gestionnaire'}}) }}
							{{ form_row(form.email, {'label': 'Email :', 'attr': {'placeholder': 'Adresse email'}}) }}
							{{ form_row(form.password, {'label': 'Mot de passe :', 'attr': {'placeholder': 'Mot de passe'}}) }}
							{{ form_row(form.confirm_password, {'label': 'Confirmez le mot de passe :', 'attr': {'placeholder': 'Confirmez le mot de passe'}}) }}
						</div>
					</div>
					<div class="col-6">
						<div class="card-body">
							{{ form_row(form.dispositif, {'label': 'Dispositif :'}) }}
							{{ form_row(form.ville, {'label': 'Ville :'}) }}
							<button type="submit" class="btn btn-success">Inscription</button>
						</div>
					</div>
				</div>
			</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
