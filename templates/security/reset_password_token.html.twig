{% extends 'base.html.twig' %}

{% block page_title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}

	<div class="container">
		<div class="card card-login mt-5 mx-auto">
			<div class="card-header">
				<h3 class="m-0 text-primary text-center">Réinitialisation du mot de passe</h3>
			</div>
			<div class="card-body">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
					<div class="form-group">
						{{ form_row(form.password, {'label': 'Nouveau mot de passe :'}) }}
						{{ form_row(form.password_confirm, {'label': 'Confirmez le nouveau mot de passe :'}) }}
					</div>
					<div class="form-group text-center">
						<button class="btn btn-success" type="submit">Réinitialiser</button>
					</div>
		        {{ form_end(form) }}
			</div>
		</div>
	</div>

{% endblock %}
