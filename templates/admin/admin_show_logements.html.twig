{% extends 'base.html.twig' %}

{% block title %}{{ Gestionnaire.username }} de {{ Gestionnaire.ville }}{% endblock %}

{% block body %}
	<h2>Administration</h2>
	<h3>{{ Gestionnaire.username }} de {{ Gestionnaire.ville }} - <a href="/admin">Retour à la liste des Gestionnaires</a></h3> 

	<table id="example" class="display" style="width:100%">
        <thead>
            <tr>
			    <th>N° rue</th>
	    		<th>Nom rue</th>
		        <th>Ville</th>
		        <th>N° Bât</th>
		        <th>N° porte</th>
		        <th>Etage</th>
		        <th>Type</th>
		        <th>Capacité</th>
		        <th>Détails</th>
				<th>Nom</th>
		        <th>Prénom</th>
		        <th>Date de naissance</th>
		        <th>Date d'arrivée</th>
		        <th>Date de sortie</th>
		        <th>Nombre d'enfants</th>
            </tr>
        </thead>
        <tbody>
		{% for logement in Gestionnaire.logement %}
			{% for occupant in logement.occupant %} 
				<tr>
			        <td>{{ logement.numrue }}</td>
			        <td>{{ logement.nomrue }}</td>
			        <td>{{ logement.ville }}</td>
			        <td>{{ logement.bat }}</td>
			        <td>{{ logement.numlgmt }}</td>
			        <td>{{ logement.etage }}</td>
			        <td>{{ logement.typlgmt }}</td>
			        <td>{{ logement.capacite }}</td>
			        <td>{{ logement.description }}</td>	
			      	<td>{{ occupant.nom }}</td>	
		        	<td>{{ occupant.prenom }}</td>	
		        	<td>{{ occupant.datenaissance  | date('d/m/y') }}</td>	
		        	<td>{{ occupant.datearrivee  | date('d/m/y') }}</td>	
		        	<td>{{ occupant.datesortie  | date('d/m/y') }}</td>
		        	<td>{{ occupant.nbenfant }}</td>
				</tr>
			{% endfor %} 
		{% endfor %} 
        </tbody>
        <tfoot>
            <tr>
			    <th>N° rue</th>
	    		<th>Nom rue</th>
		        <th>Ville</th>
		        <th>N° Bât</th>
		        <th>N° porte</th>
		        <th>Etage</th>
		        <th>Type</th>
		        <th>Capacité</th>
		        <th>Détails</th>
				<th>Nom</th>
		        <th>Prénom</th>
		        <th>Date de naissance</th>
		        <th>Date d'arrivée</th>
		        <th>Date de sortie</th>
		        <th>Nombre d'enfants</th>
            </tr>
        </tfoot>
    </table>
{% endblock %}